<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_graph"
    app:startDestination="@id/cameraFragment">

    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.galleryapp.presenter.ui.camera.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" >
        <action
            android:id="@+id/action_cameraFragment_to_capturedPhotoFragment"
            app:destination="@id/capturedPhotoFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right">
        </action>

        <action
            android:id="@+id/action_cameraFragment_to_detailsFragment"
            app:destination="@id/detailsFragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/capturedPhotoFragment"
        android:name="com.example.galleryapp.presenter.ui.capturePhoto.CapturedPhotoFragment"
        android:label="fragment_captured_photo"
        tools:layout="@layout/fragment_captured_photo" >
        <argument
            android:name="path"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.galleryapp.presenter.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

</navigation>